<article>
  <%= link_to product_path(product) do %>
    <%= image_tag product.image.thumb.url , alt: product.name %>
    <h1>
      <span><%= product.name %></span>
      <span><%= humanized_money_with_symbol product.price %></span>
    </h1>
  <% end%>
  <%= product.quantity %>
  <%if product.quantity != 0%>
  <div>
    <%= button_to add_item_cart_path(product_id: product.id), class: 'btn' , data: {cy: 'buy'},
    method: :post do %>
      <%= fa_icon "shopping-cart", text: 'Add' %> 
    <% end %>
  </div>
  <%else%>
  <div>
  <div>
    <%= button_to add_item_cart_path(product_id: product.id), class: 'soldout' , disabled: true,
    method: :post do %>
      <%= fa_icon "", text: 'Sold Out' %> 
    <% end %>
  </div>
  <div>
    <%= button_to add_item_cart_path(product_id: product.id), class: 'btn noclick' , disabled: true,
    method: :post do %>
      <%= fa_icon "shopping-cart", text: 'Add' %> 
    <% end %>
  </div>
  </div>
  <% end %>
</article>


