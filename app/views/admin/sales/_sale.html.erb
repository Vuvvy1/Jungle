<tr>

  <td>
    <h4><%= sale.name %></h4>
  </td>
  <td><%= sale.starts_on %></td>
  <td><%= sale.ends_on %></td>
  <td>
    <% if sale.finished? %>
    <span class="alert alert-primary">Finished</span>
    <% end %>
    <% if sale.Active? %>
    <span class="alert alert-primary">Active</span>
    <% end %>
    <% if sale.Upcoming? %>
    <span class="alert alert-primary">Upcoming</span>
    <% end %>
  </td>
  <td><%= sale.percent_off %></td>
  <td>
    <%#= link_to fa_icon('trash'), [:admin, product], class: 'btn btn-sm
    btn-danger', method: :delete, data: { confirm: "Are you sure?" } %>
  </td>
</tr>
