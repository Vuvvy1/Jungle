<h1>Admin::Dashboard#show</h1>
<section class="admin-products-index">

  <header class="page-header">
    <h1>admin &raquo; All Products</h1>
  </header>

  <div class="well">
    <%= link_to '+ New Product', [:new, :admin, :product], class: 'btn btn-info' %>
  </div>

  <div class="panel panel-default products">

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Product</th>
          <th>Categorys</th>
          <th>orders_count</th>
          <th>line items count</th>
        </tr>
      </thead>
      <tbody>
      <tr>
  <td>
    <%= @products_count %>
  </td>
  <td>
    <%= @categories_count %>
  </td>
  <td>
    <%= @orders_count %>
  </td>
  <td>
    <%= @line_items_count %>
  </td>
</tr>
      </tbody>
    </table>

  </div>

</section>
